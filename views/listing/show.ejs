<% layout('./layouts/boilerplate.ejs') -%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3><%= listing.title %></h3>
         </div>
        <div class="card col-6 offset-2 show-card listing-card">
             <img src="<%= listing.image %>" class="card-img-top show-img" alt="image"style="height:21rem;>
             <div class="card-body">
                 <p class="card-text">
                  
                    <%= listing.description %><br>
                    &#8377;<%= listing.price.toLocaleString("en-IN") %>/Night<br>
                    <%= listing.location %><br>
                    <%= listing.country %>
                </p>
            </div>
      </div>
 
     <div class="btns mb-3">
           <a href="/listing/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2 ">Edit</a>

              <form method="POST" action="/listing/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark offset-4 btn-delete">Delete</button>
          </form>
     </div>
     <hr>
     <div class="col-8 offset-2 mb-3">
      <h4>Leave Review</h4>
      <form action="/listing/<%= listing.id %>/review" method="post" class="needs-validation">
        <div class="mb-3 mt-3"> 
        <label for="rating" class="form-label">Rating</label>
        <input type="range" min="1" max="5" id="review" name="review[rating]" class="form-range">
         </div>
         <div class="mb-3 mt-3"> 
        <label for="comment" class="form-label"  >Comments</label>
        <textarea name="review[Comment]" id="comment" rows="5" cols="20" class="form-control" required></textarea>
       
      <div class="invalid-feedback">
        please add some comment for review
      </div>
      </div>
        <button class="btn btn-outline-dark ">Submit</button>
      </form>
      <hr>
      <h4 class="mt-4">All Reviews</h4>
<div class="review-container">
    <% for(let review of listing.reviews) { %>
        <div class="review-card">
            <div class="review-header">
                <h5 class="card-title">Name</h5> <!-- Replace with actual username later -->
                <p class="review-rating">‚≠ê <%= review.rating %>/5</p>
            </div>
            <p class="review-comment"><%= review.Comment %></p>
        </div>
        <form method="post" action="/listing/<%= listing._id %>/review/<%= review._id %>?_method=DELETE" class="review-form">
            <button>Delete</button>
        </form>
    <% } %>
</div> 
     </div>
   </div>
 
 
 